<% content_for :header do %>
	<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
	
	<script type="text/javascript">
	  function initialize() {
	    var latlng = new google.maps.LatLng(-34.397, 150.644);
		var latlngbounds = new google.maps.LatLngBounds( );
		var myOptions = {
	      zoom: 11,
	      center: latlng,
		  disableDefaultUI: true,
		  zoomControl: true,
	      mapTypeId: google.maps.MapTypeId.ROADMAP
	    };
	    var map = new google.maps.Map(document.getElementById("map_canvas"), myOptions);
		
		<% @stops['results']['bindings'].each do |s| %>
			var tLatlng = new google.maps.LatLng(<%= s['lat']['value'] %>,<%= s['long']['value'] %>);
			var marker = new google.maps.Marker({
			      position: tLatlng,
				  map: map,
			      title:"<%= s['label']['value'] %>"
			});
			google.maps.event.addListener(marker, 'click', function() {
				window.open("<%= times_path(:route_id => params[:route], :stop_uri => s['.0']['value'], :stop_name => s['label']['value'], :cal_uri => params[:cal_uri], :service_description => params[:service_description], :lat => s['lat']['value'], :long => s['long']['value']) %>","_self"); 
			});
			latlngbounds.extend( tLatlng );
		<% end %>
		
		map.fitBounds( latlngbounds );
	  }
		
	</script>
<% end %>

<% content_for :body_tag do %> onload="initialize()"<% end %>

<div id="content">
	<h2>
		Bus Stops for <%= params[:route] %>,<br />
		<%= params['service_description'] %>
	</h2>
	
	<div id="info">
		<%= form_tag('/route', :method => :get) do -%>
			<%= label_tag 'route', "Route" %>
			<%= text_field_tag 'route' %>
			<%= submit_tag 'Search'%>
		<% end -%>
	</div>
	<div id="info">
		<div class="right_info">
			<div id="map_canvas"></div>
		</div>
		<div class="left_info">
			<% @stops['results']['bindings'].each do |s| %>
				<p><%= link_to s['label']['value'], times_path(:route_id => params[:route], :stop_uri => s['.0']['value'], :stop_name => s['label']['value'], :cal_uri => params[:cal_uri], :service_description => params[:service_description], :lat => s['lat']['value'], :long => s['long']['value']) %></p>
			<% end %>
		</div>
	</div>
	<p><% @stops.inspect %></p>
</div>